#include <iostream>
using namespace std;
int main ()
{
int L,W,A,P;
cout<<"enter your dimesnions"<<endl;
cin >>L>>W;
A=L*W;
P=(L+W)*2;
cout<<A<<endl<<P<<endl;
return 0;
}



int L,A,P;
cout<<"enter your dimesion"<<endl;
cin>>L;
A=L*L;
P=L+L+L+L;
cout<<A<<endl<<P<<endl;
return 0;




#include <iostream>
#define PI 3.14
using namespace std;
int main ()
{
double r,A,P;
cout <<"enter your redius"<<endl;
cin >>r;
A=r*r*PI;
P=2*r*PI;
cout <<A<<endl<<P<<endl;
return 0;
}

